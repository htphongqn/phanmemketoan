using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using DevExpress.XtraGrid.Views.Grid;
using System.Windows.Forms;

namespace ketoansoft.app.Class.Global
{
    public class Unit
    {
        public virtual void Get_AllowEdit(GridView grv)
        {
            int _numCol = grv.Columns.Count;
            string msg = "";
            for (int i = 0; i < _numCol; i++)
            {
                if (grv.Columns[i].OptionsColumn.AllowEdit)
                {
                    grv.Columns[i].OptionsColumn.AllowEdit = false;
                    msg = "Đã tắt chế độ chỉnh sửa!";
                }
                else
                {
                    grv.Columns[i].OptionsColumn.AllowEdit = true;
                    msg = "Đã bật chế độ chỉnh sửa!";
                }
            }
            MessageBox.Show(msg, "Thông báo", MessageBoxButtons.OK, MessageBoxIcon.Information);
        }
    }
}
